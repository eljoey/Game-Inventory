extends layout

block content
    h1= title

    p #[strong Genre: ] 
        a(href= genre.url) #{genre.name}
    
    hr
    if genre_games.length
        p #[strong Delete the following games before attempting to delete this genre.]

        div(style='margin: 20px 0 0 20px')

            h4 Games

            dl
            each game in genre_games
                dt
                    a(href=game.url) #{game.title}
            
    else
        p Do you really want to delete this Genre?

        form(action="", method="POST")
            div.form-group
                input#genreid.form_control(type='hidden' name='genreid' required=true value=genre._id)

            button.btn.btn-primary(type='submit') Delete
