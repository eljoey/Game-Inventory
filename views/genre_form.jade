extends layout

block content
    h1= title

    form(action='', method='POST')
        div.form-group
        label(for='name') Name: 
        input#name.form-control(type='text' name='name' placeholder='ARPG, Sandbox, OpenWorld etc', value=(undefined === genre ? '' : genre.name) required='true')
        
        button.btn.btn-primary(type="submit") Submit
    
    if errors
        ul
            for error in errors
                li!= error.msg